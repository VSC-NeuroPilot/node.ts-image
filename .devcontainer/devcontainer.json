  {
    "name": "Node.ts Container",
    "build": {
      "dockerfile": "Dockerfile",
      "context": "..",
      "args": {
        "GITHUB_REPOSITORY": "${localEnv:GITHUB_REPOSITORY}",
        "APP_DIR": "/workspace"
      }
    },
    "runArgs": ["--init"],
    "remoteUser": "node",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "git init",
    "updateContentCommand": "npm install",
    "postAttachCommand": "npm audit",
    "shutdownAction": "stopContainer",
    "customizations": {
      "vscode": {
          "extensions": [
              "esbenp.prettier-vscode",
              "dbaeumer.vscode-eslint",
              "wowbox.code-debuger",
              "Pasu4.neuropilot"
          ]
      }
    }
  }

  {
    "name": "Node.ts Container",
    "build": {
      "dockerfile": "Dockerfile",
      "context": "..",
      "args": {
        "GITHUB_REPOSITORY": "${localEnv:GITHUB_REPOSITORY}",
        "APP_DIR": "/workspace"
      }
    },
    "runArgs": ["--init", "--add-host=host.docker.internal:host-gateway"],
    "remoteUser": "node",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "git init",
    "updateContentCommand": "npm install",
    "postAttachCommand": "npm audit",
    "shutdownAction": "stopContainer",
    "customizations": {
      "vscode": {
          "extensions": [
              "esbenp.prettier-vscode",
              "dbaeumer.vscode-eslint",
              "wowbox.code-debuger",
              "vsc-neuropilot.neuropilot-base"
          ],
          "settings": {
            "neuropilot.websocketUrl": "ws://host.docker.internal:8000",
            "neuropilot.permission.editActiveDocument": "Autopilot",
            "neuropilot.permission.create": "Copilot",
            "neuropilot.permission.rename": "Copilot",
            "neuropilot.permission.delete": "Copilot",
            "neuropilot.permission.runTasks": "Copilot"
          }
      }
    }
  }
